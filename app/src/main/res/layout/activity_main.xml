<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:soundEffectsEnabled="true"

    android:background="@drawable/bgnew"
    tools:context="com.example.dell.mainproject.MainActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Levels"
        android:visibility="invisible"
        android:textSize="22dp"
        android:id="@+id/btnlevel"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:fontFamily="serif"
        android:textColorLink="?attr/colorControlActivated"
        android:textCursorDrawable="@android:drawable/bottom_bar"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="HOW TO PLAY??"
        android:textSize="22dp"
        android:layout_marginBottom="90dp"
        android:id="@+id/btninfo"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:fontFamily="serif"
        android:textColorLink="?attr/colorControlActivated"
        android:textCursorDrawable="@android:drawable/bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="PLAYERS"
        android:textSize="22dp"
        android:id="@+id/btnplayer"

        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:fontFamily="serif"
        android:textColorLink="?attr/colorControlActivated"
        android:textCursorDrawable="@android:drawable/bottom_bar"
        android:layout_above="@+id/btnhs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="HIGHSCORE"
        android:id="@+id/btnhs"
        android:textSize="22dp"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:fontFamily="serif"
        android:textColorLink="?attr/colorControlActivated"
        android:textCursorDrawable="@android:drawable/bottom_bar"
        android:layout_above="@+id/btninfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/naw"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40sp"
        android:src="@drawable/nw"
        android:layout_above="@+id/btnplayer"
        android:layout_marginBottom="24dp" />

</RelativeLayout>
